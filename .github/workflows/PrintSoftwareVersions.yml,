name: Print Software Versions

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  print_versions:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Print MacBook information
        run: |
          echo "MacBook Pro:"
          uname -a
          echo "Machintosh (macOS):"
          sw_vers

      - name: Print Firefox version
        run: |
          echo "Firefox version:"
          firefox --version || echo "Firefox not installed"

      - name: Print ReactJS version
        run: |
          echo "ReactJS version:"
          npx create-react-app --version || echo "ReactJS not installed"

      - name: Print Linux Ubuntu version (Server 1)
        run: |
          echo "Linux Ubuntu (Server 1) version:"
          lsb_release -a || echo "lsb_release command not available"

      - name: Print ApplicationServer.jar info
        run: |
          echo "ApplicationServer.jar version: 17"

      - name: Print Linux Ubuntu version (Server 2)
        run: |
          echo "Linux Ubuntu (Server 2) version:"
          lsb_release -a || echo "lsb_release command not available"
